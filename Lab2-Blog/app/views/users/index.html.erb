<h1>Listing Users</h1>
<%= link_to 'New user', new_user_path %>
<table style="border:5px solid; padding=3px;  width: 100%; height: 300px;">
  <tr style="border:5px solid; background-color:lightblue;">
    <th>User Name</th>
    <th>Email</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr style="background-color:lightgray; text-align: center;">
      <td><%= user.username %></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
</table>